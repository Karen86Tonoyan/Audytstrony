# Ollama Agent - Konfiguracja
# ============================
# Skopiuj ten plik jako .env i uzupełnij wartości

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_VISION_MODEL=llava
OLLAMA_TIMEOUT=120

# Agent
AGENT_NAME=Ollama Agent
DEBUG=false
LOG_LEVEL=INFO

# Voice
VOICE_LANGUAGE=pl-PL

# OCR
OCR_LANGUAGE=pol+eng

# Telegram (opcjonalne)
TELEGRAM_BOT_TOKEN=

# Twitter/X (opcjonalne)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Instagram (opcjonalne)
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# Facebook (opcjonalne)
FACEBOOK_ACCESS_TOKEN=
